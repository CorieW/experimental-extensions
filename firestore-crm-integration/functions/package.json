{
  "name": "firestore-sync-zendesk-tickets",
  "version": "0.0.1",
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "local:emulator": "cd ../../_emulator && firebase emulators:start -P demo-test",
    "test": "cd ../../_emulator && firebase emulators:exec jest -P demo-test",
    "test:local": "npm-run-all --kill-others --success=second \"npm run local:emulator\" \"jest\"",
    "test:watch": "concurrently \"npm run local:emulator\" \"jest --watch\"",
    "deploy": "firebase ext:install ../ --project=extensions-testing"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^11.0.0",
    "firebase-functions": "^3.14.1",
    "node-zendesk": "^2.1.0",
    "octokit": "^1.8.1",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/jest": "^28.1.4",
    "@types/jsdom": "^16.2.14",
    "@types/node-zendesk": "^2.0.5",
    "concurrently": "^7.2.2",
    "firebase-functions-test": "^0.2.3",
    "jest": "^28.1.2",
    "ts-jest": "^28.0.5"
  },
  "private": true
}
